<Window x:Class="Pixel_Art.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixel_Art"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Window.Resources>
        <Style TargetType="Border" x:Key="cellStyle">
            <Setter Property="BorderThickness" Value="0.1"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <EventSetter Event="MouseEnter" Handler="CellMouseEnter"></EventSetter>
            <EventSetter Event="MouseLeftButtonDown" Handler="CellLeftMouseButtonDown"></EventSetter>
        </Style>
        
        
    </Window.Resources>
    
    
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="100" Orientation="Horizontal" Background="Aqua">
                <Border>
                    <StackPanel>
                        <TextBlock>Nuevo</TextBlock>
                    </StackPanel>
                </Border>
                
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Width="150" Background="Aqua">
                
            </StackPanel>
            <Border Margin="20" Width="500" Height="500">
                <Grid x:Name="canvasGrid" >

                </Grid>
            </Border>

        </DockPanel>
    </Grid>
</Window>
